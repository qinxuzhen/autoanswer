<?xml version="1.0" encoding="GBK"?>
<configuration>
      
    <!-- 按照每天生成日志文件 -->   
    <appender name="robotserver"  class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<file>${robot.logback.root}/robot.log</file>    
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>${robot.logback.root}/robot.log.%d{yyyy-MM-dd}</FileNamePattern>  
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>   
        <layout class="ch.qos.logback.classic.PatternLayout">  
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符--> 
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>  
       </layout>
       <Encoding>GB2312</Encoding>   
       <append>true</append>   
        <!--日志文件最大的大小
       <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
         <MaxFileSize>10MB</MaxFileSize>
       </triggeringPolicy>
       -->
    </appender>
    
    
    <root level="${robot.logback.level}">   
        <appender-ref ref="robotserver" />   
    </root>

</configuration>